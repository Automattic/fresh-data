{
	"name": "@fresh-data/react-provider",
	"version": "0.6.0",
	"description": "Provide fresh-data to your React app.",
	"license": "MIT",
	"homepage": "https://github.com/automattic/fresh-data#readme",
	"repository": "github:automattic/fresh-data",
	"bugs": "https://github.com/automattic/fresh-data/issues",
	"keywords": [
		"javascript",
		"api",
		"data",
		"functional",
		"reducer",
		"react",
		"redux"
	],
	"author": "Kevin Killingsworth <kevin.killingsworth@automattic.com> (https://github.com/coderkevin)",
	"main": "lib/index.js",
	"module": "es/index.js",
	"files": [
		"dist",
		"es",
		"lib",
		"src"
	],
	"scripts": {
		"clean": "rimraf lib dist es coverage",
		"build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
		"build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
		"build:umd": "cross-env BABEL_ENV=rollup NODE_ENV=development rollup -c -o dist/fresh-data-react-provider.js",
		"build:umd:min": "cross-env BABEL_ENV=rollup NODE_ENV=production rollup -c -o dist/fresh-data-react-provider.min.js",
		"build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
		"lint": "eslint src",
		"test": "jest --runInBand src",
		"test:watch": "jest --runInBand --watchAll src",
		"prepublishOnly": "npm run clean && npm run lint && npm test && npm run build"
	},
	"peerDependencies": {
		"@fresh-data/framework": "^0.4.1",
		"debug": "^3.1.0 || ^4.0.0",
		"lodash": "^4.17.10",
		"react": "^16.0.0-0",
		"react-dom": "^16.0.0-0",
		"react-redux": "^5.0.0-0 || ^6.0.0 || ^7.0.0",
		"redux": "^3.0.0-0 || ^4.0.0-0"
	},
	"dependencies": {
		"@babel/runtime": "^7.1.2",
		"prop-types": "^15.6.2"
	},
	"devDependencies": {
		"@babel/cli": "7.4.3",
		"@babel/core": "7.4.3",
		"@babel/plugin-proposal-class-properties": "7.4.0",
		"@babel/plugin-proposal-object-rest-spread": "7.4.3",
		"@babel/plugin-transform-react-jsx": "7.3.0",
		"@babel/plugin-transform-runtime": "7.4.3",
		"@babel/preset-env": "7.4.3",
		"@fresh-data/framework": "^0.6.0",
		"ajv": "6.10.0",
		"babel-core": "7.0.0-bridge.0",
		"babel-eslint": "10.0.1",
		"babel-jest": "24.7.1",
		"codecov": "3.3.0",
		"cross-env": "5.2.0",
		"debug": "4.1.1",
		"enzyme": "3.9.0",
		"enzyme-adapter-react-16": "1.12.1",
		"eslint": "5.16.0",
		"eslint-config-wordpress": "2.0.0",
		"eslint-plugin-jest": "22.5.0",
		"eslint-plugin-jsx-a11y": "6.2.1",
		"eslint-plugin-react": "7.12.4",
		"eslint-plugin-wordpress": "git://github.com/WordPress-Coding-Standards/eslint-plugin-wordpress.git",
		"identity-obj-proxy": "3.0.0",
		"jest": "24.7.1",
		"jest-environment-enzyme": "7.0.2",
		"jest-enzyme": "7.0.2",
		"lerna": "3.13.3",
		"lodash": "4.17.11",
		"react": "16.8.6",
		"react-dom": "16.8.6",
		"react-redux": "7.0.2",
		"redux": "4.0.1",
		"rimraf": "2.6.3",
		"rollup": "1.10.1",
		"rollup-plugin-babel": "4.3.2",
		"rollup-plugin-commonjs": "9.3.4",
		"rollup-plugin-node-resolve": "4.2.3",
		"rollup-plugin-replace": "2.2.0",
		"rollup-plugin-uglify": "6.0.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"jest": {
		"testURL": "http://localhost/",
		"verbose": true,
		"collectCoverage": true,
		"coverageDirectory": "../../coverage",
		"moduleNameMapper": {
			"\\.(css)$": "identity-obj-proxy"
		},
		"setupTestFrameworkScriptFile": "jest-enzyme",
		"testEnvironment": "enzyme",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/examples/"
		]
	}
}
